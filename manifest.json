{
    "manifest_version": 3,
    "name": "FTU JWT Viewer",
    "version": "2.0",
    "permissions": ["webRequest", "storage", "tabs"],
    "host_permissions": ["https://ftugate.ftu.edu.vn/*"],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "avt.png",
        "48": "avt.png",
        "128": "avt.png"
    },
    "action": {
        "default_icon": {
            "16": "avt.png",
            "48": "avt.png",
            "128": "avt.png"
        }
    }
}
